{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "V1Root",
  "type": "object",
  "properties": {
    "V1RootResponse": {
      "type": "object",
      "required": ["success", "message", "version"],
      "properties": {
        "success": {
          "type": "boolean",
          "description": "Whether the request was successful"
        },
        "message": {
          "type": "string",
          "description": "Welcome message for the API"
        },
        "version": {
          "type": "string",
          "description": "API version number"
        }
      }
    }
  }
}
